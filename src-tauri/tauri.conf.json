{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["Hebrew", "English"]
      },
      "wix": {
        "language": ["he-IL", "en-US"]
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "Ten10",
  "version": "0.2.9",
  "identifier": "com.ten10.dev",
  "plugins": {},
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "maximized": true,
        "resizable": true,
        "decorations": true,
        "acceptFirstMouse": true,
        "title": "Ten10",
        "width": 1024,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  }
}
